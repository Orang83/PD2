        <a class="cta" href="cart.html"><button>Krepšelis</button></a></header>
    <main>
<div class="container">
    <div class="title">Prisijungimas</div>
    <form action="/auth/login" method="POST">
        <div class="user-details">
            <div class="input-box">
                <span class="details">Elektroninis paštas</span>
                <input type="text" placeholder="Enter Email" name="email" required>
            </div>

            <div class="input-box">
                <span class="details">Slaptažodis</span>
                <input type="text" placeholder="Enter Password" name="password" required>
            </div>
        </div>
        <div class="btn">
            <input type="submit" value="Prisijungti">
        </div>
    </form>
    <p>
        Neturite paskyros? <a class="registrate" href="/registration">Registruokitės čia</a> <!-- Link to registration -->
    </p>
</div>
{{#if message}}
    <h4 class="alert">{{message}}</h4>

{{/if}}
</main>
